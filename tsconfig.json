{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "outDir": "dist",
      "declaration": true,
      "target": "ES2018"
    },
    "lib": [
      "es2018"
    ],
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }
